@model ApplicationUser

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Update User</h2>
            </div>
        </div>
    </div>



    <div class="card-body p-4">
        <form method="post">
            <input asp-for="Id" hidden />

            <div class="border p-3 mt-3">

                <div class="form-floating py-2 col-12">
                    <label asp-for="Name" class="ms-2"></label>
                    <input class="form-control border-0 shadow" asp-for="Name" disabled />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 col-12">
                    <label asp-for="UserName" class="ms-2"></label>
                    <input class="form-control border-0 shadow" asp-for="UserName" disabled />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 col-12">
                    <label asp-for="Email" class="ms-2"></label>
                    <input class="form-control border-0 shadow" asp-for="Email" disabled />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="row mt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Update</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="AccontManagement" asp-action="Index" class="btn btn-secondary form-control">
                            Back To List
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
