@model List<ApplicationUser>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-primary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Users</h2>
            </div>
        </div>
    </div>


    <div class="card-body p-3">
        <table class="table table-bordered table-striped">
            <thead>
                <tr class="table-primary">
                    <th>ID</th>
                    <th>Name</th>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Manipulate Data</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr class="table-light">
                        <td>@obj.Id</td>
                        <td>@obj.Name</td>
                        <td>@obj.UserName</td>
                        <td>@obj.Email</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="AccontManagement" asp-action="Update" class="btn btn-warning mx-2"
                                   asp-route-id="@obj.Id">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-controller="AccontManagement" asp-action="Delete" class="btn btn-danger mx-2"
                                   asp-route-id="@obj.Id">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

